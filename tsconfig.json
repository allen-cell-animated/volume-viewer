{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "type-declarations",
    "downlevelIteration": true,
    "jsx": "preserve",
    "lib": ["DOM", "ES2015", "ES6", "DOM.Iterable", "ScriptHost", "es2016.array.include"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
  },
  "files": [
    "src/index.ts",
    "public/index.ts"
  ],
  "include": [
    "src/**/*",
    "public/**/*"
  ]
}
